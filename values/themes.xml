<resources
    xmlns:tools="http://schemas.android.com/tools"

    >
    <!-- Base application theme. -->
    <style
        name="Theme.Curso3_Semana3_RecyclerView_Petagram"
        parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/purple_500</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="textAppearanceHeadline6">@style/TextAppearance.AppCompat.Title</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.App.Subtitle1</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.AppCompat.Title</item>

    </style>
    <style name="TextAppearance.Shrine.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/indie_flower</item>
        <item name="android:fontFamily">@font/indie_flower</item>
        <item name="android:textSize">@dimen/tamañoFuenteTitulo</item>
    </style>

    <style name="TextAppearance.App.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/indie_flower</item>
        <item name="android:fontFamily">@font/indie_flower</item>
    </style>

    <dimen name="tamañoFuenteTitulo">20sp</dimen>
</resources>